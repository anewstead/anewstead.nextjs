/**
 * next/core-web-vitals uses:
 * - eslint:recommended
 * eslint airbnb uses:
 * - eslint-plugin-import
 * - eslint-plugin-react
 * - eslint-plugin-react-hooks
 * - eslint-plugin-jsx-a11y
 * airbnb-typescript uses:
 * - @typescript-eslint/eslint-plugin
 */
{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": ["react", "@typescript-eslint", "check-file", "json", "prettier"],
  "extends": [
    "next/core-web-vitals",
    "airbnb",
    "airbnb/hooks",
    "airbnb-typescript",
    "plugin:json/recommended",
    "prettier"
  ],

  "env": {
    "browser": true,
    "jasmine": true,
    "jest": true,
    "node": true
  },
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "@typescript-eslint/naming-convention": "warn",
    "@typescript-eslint/consistent-type-imports": "warn",

    "arrow-body-style": ["error", "always"],
    "arrow-parens": ["error", "always"],

    "check-file/filename-naming-convention": [
      "error",
      {
        // camelCase
        "src/!(pages)/**/*.{js,ts,css,scss}": "CAMEL_CASE",
        // PascalCase
        "src/!(pages)/**/*.{jsx,tsx}": "PASCAL_CASE",
        // glob for nextjs pages: kebab-case and start with '_' or '[' and end with ']'
        "src/pages/**/*.{js,ts,jsx,tsx}": "?([|_|[a-z0-9])+([a-z0-9])*(-|[a-z0-9])?(])"
      },
      { "ignoreMiddleExtensions": true }
    ],
    "check-file/folder-naming-convention": [
      "error",
      { "src/**/": "KEBAB_CASE" } // kebab-case
    ],

    "curly": "error",
    "import/prefer-default-export": "off",

    "json/*": ["error", { "allowComments": true }],

    "no-confusing-arrow": ["error", { "allowParens": true }],
    "no-mixed-operators": "error",
    "prefer-arrow-callback": "error",
    "prefer-template": "error",

    "prettier/prettier": ["warn", {}, { "usePrettierrc": true }],

    "react/function-component-definition": [
      "warn",
      { "namedComponents": "arrow-function" }
    ],
    "react/jsx-props-no-spreading": "off",
    "react/jsx-no-useless-fragment": "off",
    "react/prop-types": "off",
    "react/require-default-props": "off",

    "react-hooks/exhaustive-deps": "warn",
    "react-hooks/rules-of-hooks": "error"
  }
}
